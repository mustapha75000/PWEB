{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    		
		<header class="container-fluid header">
			<div class="container">
				<nav class="navbar navbar-expand-lg navbar-light bg-danger fixed-top">
				  <a class="navbar-brand" href="{{ path('app_home') }}">CartesiaLocation</a>
				  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				  </button>

				  <div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto">
                    	<li class="nav-item">
						<a class="nav-link" href="{{ path('app_home') }}"><i class="fas fa-home"></i>Accueil</a>
					  </li>
					  <li class="nav-item">
						<a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-user"></i></i>Connexion</a>
					  </li>
					  <li class="nav-item">
						<a class="nav-link" href="{{ path('app_register') }}"><i class="fas fa-pen"></i>Inscription</a>
					  </li>
					</ul>
				  </div>
				</nav>
			</div>	
		</header>
		<!-- fin header-->

		<!-- bannière -->

		<!-- fin bannière-->

		<!-- contenu -->

		<section class="container-fluid about">
			<div class="container">
				<div class="row align-items-top">
					<article class="col-12">
						<div class="jumbotron">
						<h2>Inscription</h2>
						  <hr class="my-4">
						  <div class="container">
                            {% for flashError in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}
                            {{ form_start(registrationForm) }}
                                <center>{{ form_row(registrationForm.email) }}</center><br/>
                                <center>{{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}</center><br/>
                                <center>{{ form_row(registrationForm.nom) }}</center><br/>
								<center>{{ form_row(registrationForm.roles, {
								label: "Voulez vous devenir loueur et pouvoir louer vos vehicule ?"})}}</center>
                                <center>{{ form_row(registrationForm.agreeTerms, {
                                    label: "J'accepter les termes et conditions"
                                }) }}</center><br/>

                            <center><button class="btn btn-lg btn-primary" type="submit">S'inscrire</button></center><br/>
                            {{ form_end(registrationForm) }}
						  </div>
						  <hr class="my-4">
						</div>
					</article>
				</div>
			</div>	
		</section>
{% endblock %}
